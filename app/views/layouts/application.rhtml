<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
	  <title>BlackJax</title>
	  <%= stylesheet_link_tag 'blackjax' %>
	  <%= javascript_include_tag :defaults %>
	</head>
	
	<body>
		<center>
		<div id="container">
		<div id="sidebar">
		<h3>Your Bankroll</h3>
		$<span id="cash"><%= sprintf("%.2f", session[:user].bankroll) %></span><br/>
		<h4>Current Wager</h4>
		<%= form_remote_tag(:url => { :action => :deal },
		                    :loading => 'deal_clicked()',
		                    :complete => 'deal_finished()') %>
			$<input type="text" name="wager" id="wager" size="10" value="<%= session[:wager] %>"/>
		  <%= submit_tag('Deal', :id => 'deal-button') %>
		<%= end_form_tag %>
		<br/>
		<small>(Bookmark this page to remember your bankroll)</small>
		<br/><br/>
		<p>
		<small>&copy;2007 <a href="http://pjhyett.com">PJ Hyett</a>.<br/> BlackJax v.3.0</small>
		</p>
		</div>
		<div id="game_area">
		<h1>BlackJax</h1>
		<%= @content_for_layout %>
		</div>
		</div>
		</center>

<script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
</script>
<script type="text/javascript">
_uacct = "UA-104904-4";
urchinTracker();
</script>

</body>
</html>
